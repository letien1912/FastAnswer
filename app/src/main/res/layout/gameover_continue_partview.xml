<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/button_continue"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:background="@drawable/button_continue">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/text_continue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/continue_"
                android:textSize="@dimen/answer_text_size"
                android:tint="@color/iconTintColor"
                android:textColor="@color/iconTintColor"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/text_continue"
                android:contentDescription="@string/continue_"
                android:layout_marginStart="5dp"
                android:src="@drawable/ic_continue"
                 />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>